<% title "Cadastrar Usuário" %>


<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_messages %>

  <p><%= f.label :email %><br />
  <%= f.text_field :email %></p>

  <p><%= f.label :senha %><br />
  <%= f.password_field :password %></p>

  <p><%= f.label :confirmar_senha %><br />
  <%= f.password_field :password_confirmation %></p>

<p><%= f.label :tipo_de_conta %>: <%= f.collection_select :associable_type, User::ASSOCIABLES, :to_s, :humanize, {:include_blank => true} %></p>

 <p><%= f.label :codigo_do_associacao %><i>(número de matricula do aluno ou código do professor)</i><br />
  <%= f.text_field :associable_id %></p>

 
	
 
  <p><%= f.submit "Confirmar" %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
